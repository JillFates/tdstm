{
	"info": {
		"_postman_id": "ee59014c-9254-4a74-986a-57a2e9c9ef1a",
		"name": "Get App Version",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "REST - JWT Authenticate",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b4f18c3e-477e-4e6a-b38b-29da6b0d3a39",
						"exec": [
							"var data = pm.response.json();",
							"",
							"postman.clearGlobalVariable(\"jwt_token\");",
							"postman.setGlobalVariable(\"jwt_token\", data.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{ \"username\":\"{{username}}\", \"password\":\"{{password}}\" }"
				},
				"url": {
					"raw": "{{host}}/tdstm/api/login",
					"host": [
						"{{host}}"
					],
					"path": [
						"tdstm",
						"api",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get App Version",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "5abda34c-60f1-4a77-9027-e31bf45fa976",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"App version wa returned\", function () {",
							"    var response = JSON.parse(responseBody);",
							"    var version = response.data.version;",
							"",
							"  pm.expect(version).to.not.eql(null);",
							"  ",
							"",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{jwt_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "Accept-Version",
						"value": "1.0",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": []
				},
				"url": {
					"raw": "{{host}}/tdstm/api/appVersion",
					"host": [
						"{{host}}"
					],
					"path": [
						"tdstm",
						"api",
						"appVersion"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"id": "9d21efbc-b3a7-4919-ad82-be0d910d3796",
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
